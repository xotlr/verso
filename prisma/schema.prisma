generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials auth (hashed with bcrypt)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Profile
  banner   String?        // Banner image URL
  bio      String?   @db.Text
  title    String?        // "Screenwriter", "Director", etc.
  location String?
  website  String?

  // Social links
  twitter  String?
  linkedin String?
  imdb     String?

  // Profile visibility
  isPublic Boolean @default(true)

  // Subscription
  plan                   Plan      @default(FREE)
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?

  // Relations
  accounts           Account[]
  sessions           Session[]
  projects           Project[]
  screenplays        Screenplay[]
  screenplayVersions ScreenplayVersion[] @relation("ScreenplayVersionCreator")
  notes              Note[]
  schedules          Schedule[]
  budgets            Budget[]
  teamMembers        TeamMember[]
  ownedTeams         Team[]              @relation("TeamOwner")
  stats              UserStats?
  writingSessions    WritingSession[]
  externalLinks      ExternalLink[]
  invitesSent        TeamInvite[]        @relation("InvitesSent")

  @@index([plan]) // Used in limit checks
}

model Team {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profile
  banner      String?
  logo        String?        // Team logo
  description String?   @db.Text
  website     String?
  isPublic    Boolean   @default(true)

  // Billing / Seats
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  maxSeats               Int       @default(3)  // Based on plan (PRO=3, TEAM=10)

  owner       User         @relation("TeamOwner", fields: [ownerId], references: [id])
  members     TeamMember[]
  invites     TeamInvite[]
  projects    Project[]
  screenplays Screenplay[]
}

model TeamInvite {
  id        String   @id @default(cuid())
  teamId    String
  email     String
  role      TeamRole @default(MEMBER)
  token     String   @unique @default(cuid())
  expiresAt DateTime
  createdAt DateTime @default(now())
  invitedBy String

  team    Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  inviter User @relation("InvitesSent", fields: [invitedBy], references: [id])

  @@unique([teamId, email])
  @@index([token])
  @@index([email])
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      TeamRole @default(MEMBER)
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId]) // For "all teams user belongs to" queries
}

// Project = Production workspace container (like Supabase projects)
model Project {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  coverImage  String?
  banner      String?  // Banner image URL
  logo        String?  // Project logo/icon URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Ownership
  userId String
  teamId String?

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  team          Team?          @relation(fields: [teamId], references: [id])
  screenplays   Screenplay[]
  notes         Note[]
  schedules     Schedule[]
  budgets       Budget[]
  externalLinks ExternalLink[]

  @@index([userId])
  @@index([teamId])
}

// Screenplay = Actual screenplay document (can be standalone or in a project)
model Screenplay {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  synopsis  String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Can be standalone (userId only) OR in a project
  userId    String
  projectId String?
  teamId    String?

  // Screenplay type
  type         ScreenplayType @default(FEATURE)
  season       Int?           // For TV shows
  episode      Int?           // For TV shows
  episodeTitle String?        // For TV shows

  // Quick Access fields
  isFavorite   Boolean   @default(false)
  lastOpenedAt DateTime?

  // Publishing fields
  isPublic    Boolean   @default(false)
  publishedAt DateTime?
  views       Int       @default(0)
  genre       String?

  // Relations
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  project     Project?            @relation(fields: [projectId], references: [id], onDelete: SetNull)
  team        Team?               @relation(fields: [teamId], references: [id], onDelete: Cascade)
  versions    ScreenplayVersion[]
  sceneMetas  SceneMeta[]
  sceneAttachments SceneAttachment[]

  @@index([userId])
  @@index([projectId])
  @@index([teamId])
  @@index([isPublic, publishedAt])
  @@index([userId, lastOpenedAt])
}

// Version history for screenplays
model ScreenplayVersion {
  id            String   @id @default(cuid())
  screenplayId  String

  // Content
  content       String   @db.Text

  // Metadata
  versionNumber Int
  label         String?  // User-named snapshots
  reason        String   // "manual" | "auto" | "interval" | "restore"

  // Stats
  wordCount     Int
  sceneCount    Int

  // Tracking
  createdAt     DateTime @default(now())
  createdBy     String

  // Relations
  screenplay    Screenplay @relation(fields: [screenplayId], references: [id], onDelete: Cascade)
  creator       User       @relation("ScreenplayVersionCreator", fields: [createdBy], references: [id])

  @@index([screenplayId, createdAt])
  @@index([screenplayId, versionNumber])
}

// Scene metadata (colors, notes per scene)
model SceneMeta {
  id           String   @id @default(cuid())
  screenplayId String
  sceneId      String   // References scene ID in screenplay content

  // Metadata
  color        String?  // Hex color for scene (e.g., "#FF5733")
  notes        String?  @db.Text
  mood         String?  // e.g., "tense", "romantic", "action"

  // Tracking
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  screenplay   Screenplay @relation(fields: [screenplayId], references: [id], onDelete: Cascade)

  @@unique([screenplayId, sceneId])
  @@index([screenplayId])
}

// Scene attachments (images, references, mood board)
model SceneAttachment {
  id           String   @id @default(cuid())
  screenplayId String
  sceneId      String   // References scene ID in screenplay content

  // Attachment data
  type         String   // "image" | "reference" | "moodboard"
  url          String   // Supabase Storage URL
  filename     String?  // Original filename
  caption      String?
  displayOrder Int      @default(0)

  // Tracking
  createdAt    DateTime @default(now())

  // Relations
  screenplay   Screenplay @relation(fields: [screenplayId], references: [id], onDelete: Cascade)

  @@index([screenplayId, sceneId])
  @@index([screenplayId])
}

// Note = Project notes (research, character, location, etc.)
model Note {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

// Schedule = Production schedule
model Schedule {
  id        String    @id @default(cuid())
  title     String
  startDate DateTime?
  endDate   DateTime?
  data      Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

// Budget = Production budget
model Budget {
  id        String   @id @default(cuid())
  title     String
  total     Float    @default(0)
  data      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  projectId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

enum Plan {
  FREE
  PRO
  TEAM
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
}

enum ScreenplayType {
  FEATURE
  TV
  SHORT
}

// User writing statistics
model UserStats {
  id            String    @id @default(cuid())
  userId        String    @unique
  dailyGoal     Int       @default(500)
  currentStreak Int       @default(0)
  longestStreak Int       @default(0)
  lastWriteDate DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Writing session tracking
model WritingSession {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  wordCount Int      @default(0)
  duration  Int      @default(0) // minutes

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

// External links (Google Docs, research URLs, etc.)
model ExternalLink {
  id          String   @id @default(cuid())
  url         String
  title       String?
  description String?  @db.Text
  favicon     String?
  image       String?  // Open Graph image
  siteName    String?
  category    String?  // "research" | "reference" | "script" | "other"

  userId      String
  projectId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
}
